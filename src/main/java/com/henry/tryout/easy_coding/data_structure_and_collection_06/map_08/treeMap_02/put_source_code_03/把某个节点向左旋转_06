private void rotateLeft(Entry<K,V> x) {
    if (x != null) {
        Entry<K,V> y = x.right;        // 1. y æ˜¯ x çš„å³å­©å­

        x.right = y.left;              // 2. å°† y çš„å·¦å­æ ‘è½¬ç»™ x çš„å³å­æ ‘
        if (y.left != null)
            y.left.parent = x;         // 3. æ›´æ–° y.left çš„çˆ¶æŒ‡é’ˆ

        y.parent = x.parent;           // 4. å°† y çš„çˆ¶è®¾ä¸º x åŸæ¥çš„çˆ¶

        if (x.parent == null)          // 5. å¦‚æœ x æ˜¯æ ¹ï¼Œåˆ™ y æˆä¸ºæ–°æ ¹
