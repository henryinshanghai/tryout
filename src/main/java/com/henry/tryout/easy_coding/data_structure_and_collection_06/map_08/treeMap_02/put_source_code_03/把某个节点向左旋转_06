        else if (x.parent.left == x)   // 6. å¦‚æœ x æ˜¯å…¶çˆ¶çš„å·¦å­©å­
            x.parent.left = y;         //    åˆ™ y æ¥æ›¿ x çš„ä½ç½®ï¼ˆæˆä¸ºå·¦å­©å­ï¼‰
